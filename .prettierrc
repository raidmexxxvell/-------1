{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "quoteProps": "as-needed",
  "jsxSingleQuote": true,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "static/js/**/*.js",
      "options": {
        "parser": "babel",
        "printWidth": 100
      }
    },
    {
      "files": "static/js/**/*.ts",
      "options": {
        "parser": "typescript",
        "printWidth": 100
      }
    }
  ]
}